<Window x:Class="chat_chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chat_chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" Text="Здорово, початиться решил ?" VerticalAlignment="Center"/>
        <TextBox x:Name="name"  Grid.Row="1"  Text="Погоняло вводи сюда" VerticalAlignment="Center"/>
        <Button x:Name="craete" Content="Создать" Grid.Row="2" Margin="5,5,5,5" Click="craete_Click"/>
        <Button x:Name="connect" Content="Подключиться" Grid.Row="3" Margin="5,5,5,5" Click="connect_Click" />
        <TextBox x:Name="ip_con" Grid.Row="4"  Text="Канал связи задавать тут" VerticalAlignment="Center" />
    </Grid>
</Window>
